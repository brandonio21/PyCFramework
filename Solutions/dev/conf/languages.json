{ 
	"variables" : {
		"filename"                : "{fileName}",
		"filename_less_extension" : "{fileNameWoExtension}",
		"directory"               : "{directory}"

	},

	"languages" : [
		{
			"language"         : "java",
			"compileExtension" : "java",
			"compileCommand"   : "javac",
			"compileArguments" : [ "{directory}/{fileName}" ],
			"runExtension"     : "class",
			"runCommand"       : "java",
			"runArguments"     : [ "-cp {directory} {fileNameWoExtension}" ]

		},

		{
			"language"         : "C++",
			"compileExtension" : "cpp",
			"compileCommand"   : "g++",
			"compileArguments" : [  
						"-std=c++11", 
						"-o {directory}/{fileNameWoExtension}.o",
						"{directory}/{fileName}"
					     ],
						
			"runExtension"     : "o",
			"runCommand"       : "{directory}/{fileName}",
			"runArguments"     : []
		},

		{
			"language"         : "python",
			"runExtension"     : "py",
			"runCommand"       : "python",
			"runArguments"     : [ "{directory}/{fileName}" ]
		}
	]
}
